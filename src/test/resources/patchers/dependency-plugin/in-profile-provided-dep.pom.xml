<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>group.id</groupId>
  <artifactId>artifact-id</artifactId>
  <version>1</version>
  
  <packaging>pom</packaging>
  
  <profiles>
    <profile>
      <id>test-profile</id>
      
      <dependencies>
        <dependency>
          <groupId>other.group</groupId>
          <artifactId>dep-artifact</artifactId>
          <version>1</version>
          <scope>provided</scope>
        </dependency>
      </dependencies>

      <build>
        <plugins>
          <plugin>
            <artifactId>maven-dependency-plugin</artifactId>
            <executions>
              <execution>
                <id>test-dep</id>
                <goals>
                  <goal>unpack</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>other.group</groupId>
                      <artifactId>dep-artifact</artifactId>
                    </artifactItem>
                  </artifactItems>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  
</project>

